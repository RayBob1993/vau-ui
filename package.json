{
  "name": "vau-ui",
  "version": "0.0.0",
  "license": "MIT",
  "repository": "https://github.com/RayBob1993/vau-ui.git",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "serve": "vite",
    "prepare": "husky",
    "build": "vue-tsc && vite build",
    "build:core": "pnpm --filter @vau/core build",
    "build:ui": "pnpm --filter @vau/ui build",
    "build:lib": "pnpm run build:core && pnpm run build:ui",
    "preview": "vite preview",
    "test": "vitest run",
    "lint:js": "eslint --fix",
    "lint": "pnpm lint:js"
  },
  "packageManager": "pnpm@10.30.3",
  "engines": {
    "node": "22.17.1"
  },
  "peerDependencies": {
    "vue": ">=3.5.28",
    "zod": ">=4.3.6"
  },
  "dependencies": {
    "@vau/ui": "workspace:*",
    "@vau/core": "workspace:*",
    "@vau/theme-base": "workspace:*"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@commitlint/config-conventional": "20.4.2",
    "@stylistic/eslint-plugin": "5.9.0",
    "@types/node": "25.3.1",
    "@vitejs/plugin-vue": "6.0.4",
    "@vitejs/plugin-vue-jsx": "5.1.4",
    "@vue/test-utils": "2.4.6",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.7.0",
    "@vue/tsconfig": "0.8.1",
    "eslint": "9.39.2",
    "eslint-plugin-unused-imports": "4.4.1",
    "eslint-plugin-vue": "10.8.0",
    "eslint-plugin-import": "2.32.0",
    "happy-dom": "20.6.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18",
    "vue-eslint-parser": "10.4.0",
    "vue-tsc": "3.2.5",
    "sass-embedded": "1.97.3"
  }
}
